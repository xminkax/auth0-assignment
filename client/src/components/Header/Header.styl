@import '../../node_modules/@auth0/styleguide-core/src/vars/';

header {
  background-color: $bg-color-dark-blue;
  border-bottom: 1px solid hsla(0, 0%, 100%, .1);
}

.wrapper {
  width: auto;
  max-width: 1016px;
  margin: 0 auto;
  padding: 0 $padding-large-vertical;
  display: flex;
  align-items: center;
}

.menu {
  margin-top: 40px;
  margin-bottom: 40px;
  display: flex;
  flex-direction: row;
  width: calc(100% - 266px);
  list-style: none;
  align-items: center;
}

.menu li {
  margin: 0 $padding-large-vertical;
  cursor: pointer;
  display: flex;
}

.menu span {
  color: #bfbfbf;
}

.menu .arrow {
  position: relative;
  top: 8px;
  height: 4px;
  width: 8px;
}

.icon-budicon-460 {
  font-size 9px;
  opacity 0.7;
  color: white;
  margin-left: 4px;
}

.logo {
  width: 100px;
  height: 36px;
}

.menu .talk-button {
  letter-spacing: normal;
  text-transform: none;
  color: #bfbfbf !important;
  box-shadow: inset 0 0 0 1px hsla(0, 0%, 100%, .2) !important;
  font-size: $font-size-base;
  font-weight: 400;
}

.auth-buttons .signin-button, .logout {
  color: $color-text-contrast-light;
  padding: 1rem;
  margin-right: 4px;
  font-weight: $font-weight-normal;
  border: 0;
  background-color: transparent;
  outline: none;
}

.auth-buttons .signup {
  font-size: $font-size-micro;
  padding: $padding-base-vertical $padding-base-horizontal;
}
