.menu {
  margin-top: 41.5px;
  margin-bottom: 41.5px;
  display: flex;
  flex-direction: row;
  width: calc(100% - 266px);
  list-style: none;
  align-items: center;
}

.header-container {
  width: auto;
  max-width: 1016px;
  margin-right: auto;
  margin-left: auto;
  padding-left: 15px;
  padding-right: 15px;
  display: flex;
  align-items: center;
}

header {
  background-color: #22252e;

  //background-color: rgba(0,0,0,.88);
  //background-color: transparent;

  border-bottom: 1px solid hsla(0, 0%, 100%, .1);
}

header li {
  margin: 0 15px;
  cursor: pointer;
  display: flex;
}

.arrow {
  position: relative;
  top: 8px;
  height: 4px;
  width: 8px;
}

header span {
  color: #bfbfbf;
}

.toggle {
  display: inline-block;
  font-size: 10px;
  margin-left: 6px;
  position: relative;
  bottom: 2px;
}

.icon-budicon-460 {
  font-size 9px;
  opacity 0.7;
  color: white;
  margin-left: 4px;
}

.logo {
  width: 100px;
  height: 36px;
}

.auth-buttons .login, .logout {
  color: #bfbfbf;
  padding: 1em;
  margin-right: 3px;
  font-size: 14px;
  font-weight: 400;
  border: 0;
  background-color: transparent;
  outline: none;
}

.signup {
  font-size: 11px;
  padding: 8px 18px;
}

.theme-dark .login {
  color: #bfbfbf;
}

.menu-talk {
  text-transform: none;
  font-size: 14px;
  color: #bfbfbf !important;
  box-shadow: inset 0 0 0 1px hsla(0, 0%, 100%, .2) !important;
}
