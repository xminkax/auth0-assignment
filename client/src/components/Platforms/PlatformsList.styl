.platforms-list-wrapper {
  max-width: 1016px;
  margin: 0 auto;
  padding: 0 $padding-base-horizontal;
}

.platforms-list-wrapper
  @media (min-width 992px)
    width: 970px;


.platforms-list-wrapper .no-records {
  display: flex;
  justify-content: center;
}

.platforms-list-wrapper .list {
  list-style: none;
  display: flex;
  flex-wrap: wrap;
  padding: 0;
}
